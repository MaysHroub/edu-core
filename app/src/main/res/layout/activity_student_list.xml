<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true">
    <!-- Search bar container with icon and input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search_icon" /> <!-- Replace with your actual icon drawable -->
        <EditText
            android:id="@+id/et_search_student"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Search students by name..."
            android:inputType="textPersonName"
            android:background="@android:color/transparent"
            android:paddingStart="12dp"
            android:textSize="14sp"
            android:textColor="#222222"
            android:singleLine="true"
            android:imeOptions="actionSearch" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_students"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/btn_publish_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish Marks"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textAllCaps="false" />

</LinearLayout>
