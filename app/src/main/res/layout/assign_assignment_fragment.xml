<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#fff">

    <!-- Labels for Subject and Class side-by-side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subject:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:textColor="#555" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Class:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:textColor="#555" />
    </LinearLayout>

    <!-- Subject and Class TextViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mathematics"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#f0f0f0"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/tvClassGradeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10-A"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#f0f0f0"
            android:layout_marginStart="8dp"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- Assignment Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignment Title:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etAssignmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter assignment title"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textSize="15sp" />

    <!-- Assignment Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etAssignmentDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        android:minLines="3"
        android:gravity="top|start"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textSize="15sp"
        android:layout_marginTop="4dp" />

    <!-- Deadline DatePicker Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp" />

    <!-- Centered DatePicker -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <DatePicker
            android:id="@+id/datepickerDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_marginTop="4dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btnUploadQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload File"
        android:layout_marginTop="16dp"
        android:backgroundTint="#349BCC"
        android:textColor="#fff"
        android:padding="12dp" />

    <!-- Publish Assignment Button -->
    <Button
        android:id="@+id/btnPublishAssignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish Assignment"
        android:layout_marginTop="12dp"
        android:backgroundTint="#69C8F4"
        android:textColor="#000"
        android:padding="12dp" />

</LinearLayout>
