<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Section Selection -->
    <Spinner
        android:id="@+id/spinnerSectionAssign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:prompt="select_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title & Description -->
    <EditText
        android:id="@+id/etAssignmentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="assignment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerSectionAssign" />

    <EditText
        android:id="@+id/etAssignmentDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="assignment_description"
        android:inputType="textMultiLine"
        android:minLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAssignmentTitle" />

    <!-- Deadline Picker -->
    <TextView
        android:id="@+id/tvDeadlineLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="deadline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAssignmentDesc" />

    <Button
        android:id="@+id/btnPickDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select_date"
        app:layout_constraintBaseline_toBaselineOf="@id/tvDeadlineLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- File Upload -->
    <Button
        android:id="@+id/btnUploadQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="upload file"
        app:layout_constraintBottom_toTopOf="@+id/btnPublishAssignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDeadlineLabel" />

    <!-- Publish -->
    <Button
        android:id="@+id/btnPublishAssignment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="184dp"
        android:text="publish assignment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
