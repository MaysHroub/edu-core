<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#fff">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subject:"
            android:textStyle="bold"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:textColor="#555" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Class:"
            android:textStyle="bold"
            android:textSize="13sp"
            android:paddingStart="8dp"
            android:textColor="#555" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Subject and Class TextViews -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mathematics"
            android:textSize="15sp"
            android:padding="6dp"
            android:background="#f0f0f0"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/tvClassGradeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10-A"
            android:textSize="15sp"
            android:padding="6dp"
            android:background="#f0f0f0"
            android:layout_marginStart="8dp"
            android:elevation="2dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Exam Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exam Title:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/examTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter exam title"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exam Type:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/examTypeSpinner" />

    <!-- Max Score -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max Score:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/etMaxScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter max score (e.g., 100)"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textSize="15sp" />

    <!-- Exam Date -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exam Date:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Select Date"
        android:textSize="14sp"
        android:backgroundTint="#e0e0e0"
        android:textColor="#333" />

    <!-- Exam Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exam Description:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <EditText
        android:id="@+id/examDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Enter exam description"
        android:gravity="top|start"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:textSize="15sp" />

    <!-- Publish Button -->
    <Button
        android:id="@+id/publishAnnouncementButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Announce Exam"
        android:layout_marginTop="16dp"
        android:backgroundTint="#69C8F4"
        android:textColor="#fff"
        android:padding="12dp" />

</androidx.appcompat.widget.LinearLayoutCompat>