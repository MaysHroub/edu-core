<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCardAssignmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment Title (e.g., Math - Homework 1)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvCardSubjectGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject: Mathematics | Grade: 10A"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvCardDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due Date: 2025-06-15"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvCardSubmissionCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submissions: 15 / 20"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>
</androidx.cardview.widget.CardView>