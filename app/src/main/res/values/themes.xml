<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EduCore" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">#1B1B1B</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.EduCore" parent="Base.Theme.EduCore" />

    <style name="Theme.EduCore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EduCore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EduCore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>